{
    "name":        "triplepoint/OftBot",

    "description": "A bot that runs 1-4-24 games over an IRC channel.",

    "keywords": [
         "irc", "dice", "games", "bot", "1-4-24", "midnight"
     ],

    "homepage":    "https://github.com/triplepoint/OftBot",

    "license": "MIT",

    "authors": [
        {
            "name":     "Jonathan Hanson",
            "email":    "jonathan@jonathan-hanson.org",
            "homepage": "http://www.jonathan-hanson.org/",
            "role":     "Developer"
        }
    ],

    "support": {
        "email":  "jonathan@jonathan-hanson.org",
        "issues": "https://github.com/triplepoint/OftBot/issues",
        "source": "https://github.com/triplepoint/OftBot"
    },

    "require": {
        "php": ">=5.3.5",
        "epochblue/philip": "dev-master"
    },

    "require-dev": {
        "phpunit/phpunit":           "5.1.*",
        "squizlabs/php_codesniffer": "2.5.*"
    },

    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/triplepoint/philip"
        }
    ],

    "autoload": {
        "psr-4": {
            "OftBot\\": "source/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "OftBotTest\\": "tests/"
        }
    }
}
